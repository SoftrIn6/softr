    <div class="container" id="review-list"></div>

    <div class="add-review">
        <p>Want to add your success story? Send it to <a href="mailto:support@softrinvestment.com">support@softrinvestment.com</a> for approval!</p>
    </div>

    <!-- User Review Form -->
    <div id="comment-form">
        <h3>Submit Your Own Review</h3>
        <input type="text" id="name" placeholder="Your Name" required>
        <input type="text" id="location" placeholder="Your Location" required>
        <textarea id="comment" placeholder="Your Comment" rows="4" required></textarea>
        <button onclick="submitReview()">Submit Review</button>
        <div id="review-submission">Review Sent! Thank you!</div>
    </div>

    <script>
        const users = [
            { name: "John Doe", location: "South Africa", emoji: "ðŸ‡¿ðŸ‡¦", currency: "ZAR" },
            { name: "Jane Smith", location: "USA", emoji: "ðŸ‡ºðŸ‡¸", currency: "USD" },
            { name: "Alex Brown", location: "UK", emoji: "ðŸ‡¬ðŸ‡§", currency: "USD" },
            { name: "Emily White", location: "Australia", emoji: "ðŸ‡¦ðŸ‡º", currency: "USD" },
            { name: "Michael Johnson", location: "Canada", emoji: "ðŸ‡¨ðŸ‡¦", currency: "USD" },
            { name: "Thabo Nkosi", location: "Botswana", emoji: "ðŸ‡§ðŸ‡¼", currency: "ZAR" },
        ];

        const interestRate = 1.80;

        // Define investment ranges
        const investmentRanges = [
            { min: 467, max: 1500, currency: "ZAR" }, // Small amount
            { min: 50, max: 3000, currency: "USD" },  // Small amount
            { min: 2000, max: 30000, currency: "ZAR" }, // Larger amount
            { min: 3000, max: 7000, currency: "USD" },  // Larger amount
            { min: 800, max: 4000, currency: "ZAR" },  // Smaller amount again
            { min: 100, max: 6000, currency: "USD" },  // Smaller amount again
            { min: 4000, max: 70000, currency: "ZAR" }, // Big amount
            { min: 500, max: 15000, currency: "USD" }   // Big amount
        ];

        function generateRandomAmount(range) {
            return Math.floor(Math.random() * (range.max - range.min + 1)) + range.min;
        }

        function getRandomReviewText() {
            const phrases = [
                "I couldn't believe my eyes when I saw the returns on my investment! It's beyond what I expected.",
                "This is a game-changer for anyone looking to grow their wealth quickly. Crypto and stocks have both worked wonders for me!",
                "My investment journey has been so smooth, and Iâ€™m seeing amazing results. Highly recommend it to others!",
                "At first, I was skeptical, but now Iâ€™m a believer. The profits speak for themselves!",
                "I'm so glad I took the plunge and invested. The returns were quick and exceeded my expectations!",
                "This investment has been life-changing for me. I was able to achieve more than I ever imagined!",
                "I didnâ€™t expect it to be this profitable, but now Iâ€™m seeing a huge return. Very happy with my decision."
            ];
            return phrases[Math.floor(Math.random() * phrases.length)];
        }

        function createReview(user, investmentType, investedAmount, currency) {
            const profit = (investedAmount * interestRate).toFixed(2);
            const reviewText = getRandomReviewText();

            const reviewElement = document.createElement("div");
            reviewElement.classList.add("review");
            reviewElement.innerHTML = `
                <h3>${user.name} ${user.emoji}</h3>
                <p class="location">${user.location}</p>
                <p>Investment Type: <strong>${investmentType}</strong></p>
                <p>Invested Amount: <strong>${investedAmount} ${currency}</strong></p>
                <p>Profit Earned: <strong>${profit} ${currency}</strong></p>
                <p>"${reviewText}"</p>
            `;
            return reviewElement;
        }

        function displayReviews() {
            const reviewList = document.getElementById("review-list");
            let reviewCount = 0;
            let rangeIndex = 0;

            while (reviewCount < 400) {
                users.forEach((user) => {
                    if (reviewCount < 400) {
                        // Alternate investment type between crypto and stock
                        const investmentType = Math.random() > 0.5 ? "crypto" : "stocks";
                        
                        // Pick the range based on currency
                        const range = user.currency === "ZAR" ? investmentRanges[rangeIndex % 4] : investmentRanges[(rangeIndex % 4) + 4];
                        const investedAmount = generateRandomAmount(range);

                        const reviewElement = createReview(user, investmentType, investedAmount, user.currency);
                        reviewList.appendChild(reviewElement);
                        reviewCount++;
                        rangeIndex++;
                    }
                });
            }
        }

        // Submit comment
        function submitReview() {
            const name = document.getElementById("name").value;
            const location = document.getElementById("location").value;
            const comment = document.getElementById("comment").value;

            if (name && location && comment) {
                // Display submission message
                document.getElementById("review-submission").style.display = "block";

                // Send review to email (simulating this for now, actual implementation would need server-side support)
                const emailBody = `New Review Submission:\nName: ${name}\nLocation: ${location}\nComment: ${comment}`;
                window.location.href = `mailto:support@softrinvestment.com?subject=New Review Submission&body=${encodeURIComponent(emailBody)}`;

                // Clear form
                document.getElementById("name").value = "";
                document.getElementById("location").value = "";
                document.getElementById("comment").value = "";
            } else {
                alert("Please fill in all fields.");
            }
        }

        // Initialize
        displayReviews();
    </script>
